
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="section-slide">
    <div class="wrap-slick1">
        <div class="slick1">
            <div class="item-slick1" style="background-image: url(/images/slide-01.jpg);">
                <div class="container h-full">
                    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                        <div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
                            <span class="ltext-101 cl2 respon2">
                                Bộ sưu tập nữ 2024

                            </span>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                MÙA MỚI
                            </h2>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                            <a href="@Url.Action("CuaHang","Home",new {id = 1})" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                Mua ngay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item-slick1" style="background-image: url(/images/slide-03.jpg);">
                <div class="container h-full">
                    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                        <div class="layer-slick1 animated visible-false" data-appear="rotateInDownLeft" data-delay="0">
                            <span class="ltext-101 cl2 respon2">
                                Bộ sưu tập nam 2024
                            </span>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="rotateInUpRight" data-delay="800">
                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                Hàng mới về
                            </h2>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="rotateIn" data-delay="1600">
                            <a href="@Url.Action("CuaHang","Home",new {id = 2})" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                Mua ngay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- Banner -->
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xl-6 p-b-30 m-lr-auto">
                <!-- Block1 cho nữ -->
                <div class="block1 wrap-pic-w">
                    <img src="~/images/banner-01.jpg" style="height:250px" alt="IMG-BANNER">

                    <a href="@Url.Action("CuaHang", "Home", new { id = 1 })" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name trans-04 p-b-8">
                                Nữ
                            </span>

                            <span class="block1-info stext-102 trans-04">
                                Đông 2024
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Mua ngay
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-6 col-xl-6 p-b-30 m-lr-auto">
                <!-- Block1 cho nam -->
                <div class="block1 wrap-pic-w">
                    <img src="~/images/banner-02.jpg" style="height:250px" alt="IMG-BANNER">

                    <a href="@Url.Action("CuaHang", "Home", new { id = 2 })" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name trans-04 p-b-8">
                                Nam
                            </span>

                            <span class="block1-info stext-102 trans-04">
                                Đông 2024
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Mua ngay
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5" style="font-family: 'Roboto', sans-serif;">
                Sản phẩm mới
            </h3>
        </div>

        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    Tất cả sản phẩm
                </button>
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".women">
                    Phụ nữ
                </button>
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".men">
                    Đàn ông
                </button>

            </div>
        </div>

        <div class="row isotope-grid">
            @if (ViewBag.SanPhamPhuNu != null)
            {
                foreach (var item in ViewBag.SanPhamPhuNu)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img style="height:350px" src="~/images/women/@item.MaSanPham/@item.HinhAnh" alt="@item.TenSanPham">
                                <a href="@Url.Action("ChiTietSanPham","Home",new {id = item.MaSanPham})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    Xem thêm
                                </a>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @item.TenSanPham
                                    </a>
                                    <span class="stext-105 cl3">
                                        @String.Format("{0:0,0 đ}", item.Gia)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            @if (ViewBag.SanPhamDanOng != null)
            {
                foreach (var item in ViewBag.SanPhamDanOng)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item men">
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img style="height:350px" src="~/images/men/@item.MaSanPham/@item.HinhAnh" alt="@item.TenSanPham">
                                <a href="@Url.Action("ChiTietSanPham","Home",new {id = item.MaSanPham})" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                                    Xem thêm
                                </a>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @item.TenSanPham
                                    </a>
                                    <span class="stext-105 cl3">
                                        @String.Format("{0:0,0 đ}", item.Gia)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


