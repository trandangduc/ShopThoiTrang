
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a href="#" class="logo">
                    <img src="~/images/icons/logo-01.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li class="active-menu">
                            <a href="@Url.Action("TrangChu","Home")">Trang chủ</a>
                        </li>

                        <li>
                            <a href="#">Cửa hàng</a>
                            <ul class="sub-menu">
                                <li><a href="@Url.Action("CuaHang","Home",new {id=2})">Đàn ông</a></li>
                                <li><a href="@Url.Action("CuaHang","Home",new {id=1})">Phụ nữ</a></li>
                              
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("GioiThieu","Home")">Giới thiệu</a>
                        </li>

                        <li>
                            <a href="@Url.Action("LienHe","Home")">Liên hệ</a>
                        </li>
                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    @if (Session["User"] != null)
                    {
                        var user = (ShopThoiTrang.Models.TaiKhoan)Session["User"];
                        <ul class="main-menu">
                            <li>
                                <a href="#"> Chào @user.Username</a>
                                <ul class="sub-menu">
                                    <li><a href="@Url.Action("HoSo", "Home")">Hồ sơ</a></li>
                                    <li><a href="@Url.Action("XemDonHang", "Home")">Xem đơn hàng</a></li>
                                    <li><a href="@Url.Action("DangXuat", "Home")">Đăng xuất</a></li>
                                </ul>
                            </li>
                        </ul>
                        
                        <a href="@Url.Action("GioHang","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("DangNhap","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                            <i class="zmdi zmdi-account"></i>
                        </a>
                        <a href="@Url.Action("DangNhap","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </a>
                    }
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="@Url.Action("TrangChu","Home")"><img src="~/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            @if (Session["User"] != null)
            {
                var user = (ShopThoiTrang.Models.TaiKhoan)Session["User"];
                <ul class="main-menu" style="list-style: none; padding: 0; margin: 0;">
                    <li style="position: relative; display: inline-block; margin-right: 20px;">
                        <a href="#" style="text-decoration: none; color: black;">Chào @user.Username</a>
                        <ul class="sub-menu" style="position: absolute; top: 100%; left: 0; background-color: white; border: 1px solid #ccc; z-index: 1000; padding: 10px; list-style: none; margin: 0;">
                            <li style="margin: 0;">
                                <a href="@Url.Action("HoSo", "Home")" style="text-decoration: none; color: black; padding: 5px 10px; display: block;">Hồ sơ</a>
                            </li>
                            <li style="margin: 0;">
                                <a href="@Url.Action("XemDonHang", "Home")" style="text-decoration: none; color: black; padding: 5px 10px; display: block;">Xem đơn hàng</a>
                            </li>
                            <li style="margin: 0;">
                                <a href="@Url.Action("DangXuat", "Home")" style="text-decoration: none; color: black; padding: 5px 10px; display: block;">Đăng xuất</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <a href="@Url.Action("GioHang","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </a>
            }
            else
            {
                <a href="@Url.Action("DangNhap","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                    <i class="zmdi zmdi-account"></i>
                </a>
                <a href="@Url.Action("DangNhap","Home")" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </a>
            }
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">


        <ul class="main-menu-m">
            <li>
                <a href="@Url.Action("TrangChu","Home")">Trang chủ</a>
            </li>

            <li>
                <a href="#">Shop</a>
                <ul class="sub-menu-m">
                    <li><a href="@Url.Action("CuaHang","Home",new {id=2})">Đàn ông</a></li>
                    <li><a href="@Url.Action("CuaHang","Home",new {id=1})">Phụ nữ</a></li>
                </ul>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </li>

            <li>
                <a href="@Url.Action("GioiThieu","Home")">Giới thiệu</a>
            </li>

            <li>
                <a href="@Url.Action("LienHe","Home")">Liên hệ</a>
            </li>
        </ul>
    </div>


</header>
<style>
    body, h1, h2, h3, p, a {
        font-family: 'Roboto', sans-serif;
    }
</style>